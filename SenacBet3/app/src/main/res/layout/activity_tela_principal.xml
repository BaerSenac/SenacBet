<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaPrincipal" >

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/background" />

    <View
        android:id="@+id/shape_icone"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="460dp"
        android:background="@drawable/container_user" />

    <ImageView
        android:id="@+id/Imagem_icone_usuario"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="483dp"
        android:src="@drawable/ic_user"
        app:tint="#191717" />

    <ImageView
        android:id="@+id/image_user"
        android:layout_width="45dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="344dp"
        android:layout_marginBottom="354dp"
        android:background="#00FBF7F7"
        android:src="@drawable/ic_user"
        app:tint="#FFF9F9" />

    <TextView
        android:id="@+id/textnome_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="227dp"
        android:layout_marginBottom="371dp"
        android:text="Nome do Usuario"
        android:textColor="#F8F7F7"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/icon_email"
        android:layout_width="41dp"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="346dp"
        android:layout_marginBottom="281dp"
        android:src="@drawable/ic_email" />

    <TextView
        android:id="@+id/textemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="275dp"
        android:layout_marginBottom="290dp"
        android:text="TextView"
        android:textColor="#F8F5F5"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/button_cadastrar_aposta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="196dp"
        android:text="Cadastrar Aposta"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/deslogar"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="131dp"
        android:text="Deslogar"
        android:textStyle="bold|italic" />


</RelativeLayout>